<Window x:Class="NeuronNetworkTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuronNetworkTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="550">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="GridAll"></Grid>
        <TextBox Grid.Row="1" Name="TextBlockLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextChanged="TextBlockLog_OnTextChanged"></TextBox>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="Start" Name="ButtonStart" Click="ButtonStart_OnClick"></Button>
            <Button Grid.Row="0" Grid.Column="1" Content="Stop" Name="ButtonStop" Click="ButtonStop_OnClick"></Button>
        </Grid>
    </Grid>
</Window>
